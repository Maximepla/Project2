---
interface Testimonial {
  name: string;
  role: string;
  text: string;
  avatar: string;
}

interface Props {
  title: string;
  testimonials: Testimonial[];
}

const { title, testimonials } = Astro.props as Props;
---
<section class="bg-white py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-serif font-bold text-gray-900">{title}</h2>
      <p class="text-gray-600 mt-2">Ce que disent nos clients</p>
    </div>
    <div class="grid gap-8 md:grid-cols-2">
      {testimonials.map((test) => (
        <div class="bg-white p-6 rounded shadow hover:shadow-md transition">
          <div class="flex items-center mb-4">
            <img src={test.avatar} alt={test.name} class="w-12 h-12 rounded-full mr-4 object-cover"/>
            <div>
              <div class="font-semibold text-gray-900">{test.name}</div>
              <div class="text-sm text-gray-600">{test.role}</div>
            </div>
          </div>
          <p class="text-gray-700 italic">"{test.text}"</p>
        </div>
      ))}
    </div>
  </div>
</section>
