---
interface Props {
  title?: string;
}
const { title } = Astro.props as Props;
---
<header class="bg-[#f8f2e7] border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-center space-x-8 font-medium tracking-wide">
    {["Accueil", "Nos Produits", "Notre histoire", "Notre boulanger", "Contact"].map((navItem) => (
      <a 
        href="#"
        class="relative text-[#5e4b42] transition-colors duration-300 hover:text-[#1A95A4] focus:outline-none"
      >
        {navItem}
        <span class="absolute left-0 right-0 bottom-0 h-0.5 bg-[#1A95A4] transform scale-x-0 transition-transform duration-300 group-hover:scale-x-100"></span>
      </a>
    ))}
  </div>
</header>
