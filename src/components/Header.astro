---
interface Props {
  title?: string;
}
const { title = 'Boulangerie Jouvenceaux' } = Astro.props as Props;
---
<header class="bg-[#f8f2e7] border-b border-gray-200 relative z-30">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-center space-x-8 font-medium tracking-wide">
    <a href="#" class="nav-link relative text-[#5e4b42] transition-colors duration-300 hover:text-[#1A95A4]">
      Accueil
      <span class="absolute left-0 right-0 bottom-0 h-0.5 bg-[#1A95A4] transform scale-x-0 transition-transform duration-300"></span>
    </a>
    <a href="#" class="nav-link relative text-[#5e4b42] transition-colors duration-300 hover:text-[#1A95A4]">
      Nos Produits
      <span class="absolute left-0 right-0 bottom-0 h-0.5 bg-[#1A95A4] transform scale-x-0 transition-transform duration-300"></span>
    </a>
    <a href="#" class="nav-link relative text-[#5e4b42] transition-colors duration-300 hover:text-[#1A95A4]">
      Nos Valeurs
      <span class="absolute left-0 right-0 bottom-0 h-0.5 bg-[#1A95A4] transform scale-x-0 transition-transform duration-300"></span>
    </a>
    <a href="#" class="nav-link relative text-[#5e4b42] transition-colors duration-300 hover:text-[#1A95A4]">
      Contact
      <span class="absolute left-0 right-0 bottom-0 h-0.5 bg-[#1A95A4] transform scale-x-0 transition-transform duration-300"></span>
    </a>
  </div>
</header>
